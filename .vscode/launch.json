    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-MigrationTool<flow-migration>",
            "request": "launch",
            "mainClass": "com.vaadin.flow.migration.MigrationTool",
            "projectName": "flow-migration"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-AbstractListenerMethodsTestBase<flow-server>",
            "request": "launch",
            "mainClass": "com.vaadin.tests.server.component.AbstractListenerMethodsTestBase",
            "projectName": "flow-server"
        }
    ]
}